#include<stdio.h>
int a[100],size,top=-1;
void push(int item)
{
	if(top==size-1)
	 {  
	   printf("\n The Stack Is Full\n");
	 }
	 else 
	 	{
	 		top++;
	 		a[top] = item;
	 		printf("\n %d is The Pushed element ",item);
	 		
	 	}
}
void pop()
{
	if(top==-1)
	{
		printf("\n The Stack Is Empty \n");
	}
	else 
	{
	  printf("\n The poped element is %d ",a[top]);
	  top--;
	}
}
void display()
{
	if(top==size-1)
	 {
	    printf("\n The Stack is full \n");
	    
	 }
	 else if(top==-1)
	 {
		printf("\n The Stack Is Empty \n");
	 }
	else
	{
		for(int i =0;i<=top;i++)
		 { 
		   printf("\n %d",a[i]);
		 }
	}
}
void peek()
{
   if(top==size-1)
      {
        printf("\n The Stack Is Full\n");
      }
    else 
     	{ 
     	  printf("\n The Top Element Is %d\n",a[top]);
     	}
}
void main()
{
   int choice;
   printf("\n Enter The Size \n");
   scanf("\n %d",&size);
   do 
     {  printf("\n Select from \t1.push\t2.pop\t3.display\t4.peek\t");
     	printf("Enter The choice ");
     	scanf(" %d ",&choice);
       switch (choice)
        {
          case 1: printf("Enter The Number ");
          		  int n;
                  scanf("%d",&n);
                  push(n);
                  break;
          case 2: pop();
                  break;
          case 3: display();
                  break;
          case 4: peek();
                  break;
           default:("Select From valid choice  (1-4) !");
        }
     }
        while(choice<=4);
  
}
	
